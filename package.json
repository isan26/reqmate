{
  "name": "reqmate",
  "version": "1.0.4",
  "description": "Simple and extensible HTTP client library built on top of fetch with caching and retry. Works on browser, Node.js, Bun, and more.",
  "keywords": [
    "http",
    "client",
    "fetch",
    "retry",
    "polling",
    "caching",
    "browser",
    "nodejs",
    "bun"
  ],
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "scripts": {
    "test": "rm -rf ./lib &&  jest",
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "lint": "tsc"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "author": "Isan",
  "license": "ISC",
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/jest": "^29.5.4",
    "jest": "^29.6.4",
    "ts-jest": "^29.1.1",
    "tslib": "^2.6.2",
    "tsup": "^8.0.2",
    "typescript": "^5.2.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  }
}
